<launch>

  <node machine="master" pkg="tf" type="static_transform_publisher" name="odometry_frame_broadcaster" args="10 10 0   3.93 0.0 0.0 /world /odometry_frame 100" />

  <node machine="master" pkg="joystick_teleop" type="odometry_frame_publisher" name="odometry_convertor" args="odometry:=/RosAria/pose" >
    <param name="child_frame" value="/robot_pos" type="string" />
    <param name="offset_x" value="5." type="double" />
    <param name="offset_y" value="0." type="double" />
    <param name="offset_z" value="0." type="double" />

  </node>

  <node machine="master" pkg="tf" type="static_transform_publisher" name="robot_frame_broadcaster" args="0 0 0 0 0 0 /robot_pos /sonar_frame 100" />

  <node pkg="rviz" type="rviz" name="vizualizer" />
  
  <node machine="master" pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen" ns="RosAria">
    <rosparam file="$(find joystick_teleop)/launch/local_costmap.yaml" command="load" />
    <rosparam file="$(find joystick_teleop)/launch/global_costmap.yaml" command="load" />
    <rosparam file="$(find joystick_teleop)/launch/base_local_planner.yaml" command="load" />
    <remap from="odom" to="/RosAria/pose" />
    
  </node>
</launch>